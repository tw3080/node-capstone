{
  "name": "node-capstone",
  "version": "1.0.0",
  "description": "",
  "main": "public/app.js",
  "scripts": {
    "test": "mocha",
    "build": "npm run clean && npm run mkdir && npm run build:html && npm run build:css && npm run build:js",
    "watch": "concurrently --kill-others \"npm run watch:js\" \"npm run watch:html\" \"npm run watch:css\"",
    "mkdir": "mkdir build",
    "clean": "rm -rf build",
    "build:js": "npm run clean:js && webpack",
    "watch:js": "npm run build:js && webpack --watch",
    "clean:js": "rm -f build/$npm_package_name.$npm_package_version.js build/$npm_package_name.$npm_package_version.js.map",
    "build:css": "npm run clean:css && lessc --source-map ./public/assets/less/style.less build/style.css",
    "watch:css": "npm run build:css && chokidar ./public/**/*.less -c \"npm run build:css\"",
    "clean:css": "rm -f build/style.css build/style.css.map",
    "build:html": "npm run clean:html && cp public/index.html build/ && cp -r public/components build/",
    "clean:html": "rm -f build/index.html",
    "watch:html": "npm run build:html && chokidar ./public/**/*.html -c \"npm run build:html\"",
    "start": "node server.js"
  },
  "author": "Taylor Welling",
  "license": "ISC",
  "devDependencies": {
    "babel-core": "^6.17.0",
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.16.0",
    "chai": "^3.5.0",
    "chai-http": "^3.0.0",
    "chokidar-cli": "^1.2.0",
    "concurrently": "^3.1.0",
    "less": "^2.7.1",
    "mocha": "^3.1.2",
    "webpack": "^1.13.2"
  },
  "dependencies": {
    "angular": "^1.5.8",
    "angular-messages": "^1.5.8",
    "angular-route": "^1.5.8",
    "bcryptjs": "^2.3.0",
    "body-parser": "^1.15.2",
    "cookie-parser": "^1.4.3",
    "express": "^4.14.0",
    "express-session": "^1.14.1",
    "font-awesome": "^4.7.0",
    "jquery": "^3.1.1",
    "mongodb": "^2.2.11",
    "mongoose": "^4.6.4",
    "passport": "^0.3.2",
    "passport-local": "^1.0.0"
  }
}
